<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeSettings">


    <Switch
        android:id="@+id/switch1"
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_border"
        android:text="Allow Accident Detector Features"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:textAlignment="center"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_border"
        android:text="Allow Voice Commands"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="295dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_border"
        android:clickable="true"
        android:text="Feature Settings"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/backbtn1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_button2" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:text="Home Settings"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="292dp"
        android:layout_height="91dp"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:text="Accident Detector Will detect accident and send a SMS to yours added Trusted Contact(s). To enable it toggle on switch. To Manage Trused Contacts tap on this lable."
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toTopOf="@+id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="292dp"
        android:layout_height="90dp"
        android:layout_marginBottom="36dp"
        android:text="Voice Commands Will allow you to trun on or off Features (in feature settings) in Start With Navigation and Start Without Navigation Mode. To enable it toggle on switch. "
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toTopOf="@+id/tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="292dp"
        android:layout_height="90dp"
        android:layout_marginBottom="140dp"
        android:text="Tap the above lable to configure which feature are to be allowed to run in Start With Navigation Mode and Start Without Navigation Mode."
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>