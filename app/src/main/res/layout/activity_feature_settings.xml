<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage4"
    android:screenOrientation="portrait"
    tools:context=".FeatureSettings">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="294dp"
        android:layout_height="50dp"
        android:layout_marginTop="598dp"
        android:text="Mute Warnings, when toggled on, will not sound alarms of approaching detected objects. "
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginTop="482dp"
        android:text="Sign Detection Displays detected traffic signs on your screen  in real time."
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginTop="366dp"
        android:text="Object Detection detects objects and highlights them for you."
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginTop="124dp"
        android:text="Lane guide will help you to stay in the middle of a lane by augmenting guiding line on your lane."
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:text="Distant Calculator Displays Distant from detected objects to your car.  "
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:layout_marginTop="94dp"
        android:background="@drawable/custom_border"
        android:theme="@style/SwitchTheme"
        android:text="Turn On Lane Guide"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/custom_border"
        android:theme="@style/SwitchTheme"
        android:text="Turn on Distant Calculator"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:layout_marginTop="336dp"
        android:background="@drawable/custom_border"
        android:theme="@style/SwitchTheme"
        android:text="Turn on Object Detection"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:layout_marginTop="452dp"
        android:background="@drawable/custom_border"
        android:theme="@style/SwitchTheme"
        android:text="Turn on Sign Detection"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="292dp"
        android:layout_height="28dp"
        android:layout_marginTop="568dp"
        android:background="@drawable/custom_border"
        android:theme="@style/SwitchTheme"
        android:text="Turn on Mute Warnings"
        android:textAlignment="center"
        android:textColor="@color/dark_teal"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backbtn1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_button2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:text="Feature Settings"
        android:textAlignment="center"
        android:textColor="@color/light_teal"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>